{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash scripts/install-dev-tools.sh 2>&1"
          },
          {
            "type": "command",
            "command": "bash scripts/check-env.sh --quick 2>&1 || true"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "if command -v bd >/dev/null && [ -d .beads ] && ! bd sync --status 2>&1 | grep -q 'Pending changes: none'; then bd sync --full 2>&1; fi"
          }
        ]
      }
    ]
  }
}
