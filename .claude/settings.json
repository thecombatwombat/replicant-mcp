{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash scripts/install-dev-tools.sh 2>&1",
            "_comment": "Install bd and gh at versions pinned in .tool-versions"
          },
          {
            "type": "command",
            "command": "bash scripts/check-env.sh --quick 2>&1 || true",
            "_comment": "Quick env health check: tool versions, git state, plugin sync"
          },
          {
            "type": "command",
            "command": "bash scripts/beads-sync-start.sh 2>&1 || true",
            "_comment": "Pull latest beads from remote + ensure daemon has auto-sync enabled"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash scripts/beads-sync-end.sh 2>&1 || true",
            "_comment": "Push pending beads changes to remote for next session"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash scripts/pre-pr-gate.sh",
            "_comment": "Block gh pr create if complexity violations exist"
          }
        ]
      }
    ]
  }
}
